{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>{{ publication.title }}</h1>

    <p> Le nombre de commentaires : {{ publication.comments | length }} </p>
    <p> {{ publication.content }} </p>
    <p> Cr√©er le {{ publication.createdAt|date('y-m-d H:i')}}</p>

    <h2>Ajouter un commentaire :</h2>
    {{ form_start(form) }}
